    assert(agent_en.language == "en", "English agent creation failed");
    
    // Arabic
    let agent_ar = types::create_agent("ar", false);
    assert(agent_ar.language == "ar", "Arabic agent creation failed");
    
    println("âœ… test_multilingual_support passed");
