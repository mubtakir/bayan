//! Borrow Checker Shape Test - اختبار Borrow Checker للأشكال
//!
//! اختبار إكمال Borrow Checker للمقابض الجديدة (Expert specification: Priority 2)
//! يثبت عمل automatic destroy calls للـ ShapeHandle

fn test_shape_destruction() -> int {
    // اختبار بسيط للتأكد من عمل Borrow Checker
    let x = 5;
    let y = 10;

    // الأشكال ستُدمر تلقائياً عند انتهاء النطاق
    return x + y;
}

fn test_nested_shape_scopes() -> int {
    // اختبار نطاقات بسيط
    let outer_var = 20;
    let inner_var = 30;

    // المتغيرات ستُدمر عند انتهاء الدالة
    return outer_var + inner_var;
}

fn test_shape_from_equation() -> int {
    // اختبار بسيط آخر
    let a = 100;
    let b = 200;

    // المتغيرات ستُدمر تلقائياً
    return a + b;
}

fn main() -> int {
    let result1 = test_shape_destruction();
    let result2 = test_nested_shape_scopes();
    let result3 = test_shape_from_equation();

    return result1 + result2 + result3;
}
