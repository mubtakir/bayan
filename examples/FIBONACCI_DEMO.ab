// 🎊 عرض متسلسلة فيبوناتشي - Fibonacci Sequence Demo 🎊

// دالة حساب رقم فيبوناتشي
fn fibonacci(n: int) -> int {
    if n <= 1 {
        return n;
    }
    return fibonacci(n - 1) + fibonacci(n - 2);
}

// دالة حساب مجموع أول n أرقام فيبوناتشي
fn fibonacci_sum(n: int) -> int {
    let sum = 0;
    let i = 0;
    while i < n {
        sum = sum + fibonacci(i);
        i = i + 1;
    }
    return sum;
}

// دالة طباعة أول n أرقام فيبوناتشي
fn print_fibonacci(n: int) -> int {
    let i = 0;
    while i < n {
        let fib = fibonacci(i);
        i = i + 1;
    }
    return 1;
}

