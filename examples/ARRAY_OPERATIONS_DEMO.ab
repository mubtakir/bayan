// 🎊 عرض عمليات المصفوفات - Array Operations Demo 🎊

fn main() -> int {
    // إنشاء مصفوفات
    let arr1 = [1, 2, 3, 4, 5];
    let arr2 = [10, 20, 30, 40, 50];
    let arr3 = [5, 15, 25, 35, 45];

    // حساب مجموع المصفوفة الأولى
    let sum1 = 0;
    for i in arr1 {
        sum1 = sum1 + i;
    }

    // حساب مجموع المصفوفة الثانية
    let sum2 = 0;
    for i in arr2 {
        sum2 = sum2 + i;
    }

    // حساب مجموع المصفوفة الثالثة
    let sum3 = 0;
    for i in arr3 {
        sum3 = sum3 + i;
    }

    // حساب متوسط المصفوفة الأولى
    let avg1 = sum1 / 5;
    let avg2 = sum2 / 5;
    let avg3 = sum3 / 5;

    // إيجاد أكبر عنصر في المصفوفة الأولى
    let max1 = 0;
    for i in arr1 {
        if i > max1 {
            max1 = i;
        }
    }

    // إيجاد أكبر عنصر في المصفوفة الثانية
    let max2 = 0;
    for i in arr2 {
        if i > max2 {
            max2 = i;
        }
    }

    // إيجاد أكبر عنصر في المصفوفة الثالثة
    let max3 = 0;
    for i in arr3 {
        if i > max3 {
            max3 = i;
        }
    }

    return 1;
}
