// Ø¯Ø§Ù„Ø© Ø­Ø³Ø§Ø¨ Ø§Ù„Ù‚ÙˆØ©
fn power(base: int, exp: int) -> int {
    if exp == 0 {
        return 1;
    }
    return base * power(base, exp - 1);
}

// Ø¯Ø§Ù„Ø© Ø­Ø³Ø§Ø¨ Ø§Ù„Ø¬Ø°Ø± Ø§Ù„ØªØ±Ø¨ÙŠØ¹ÙŠ (ØªÙ‚Ø±ÙŠØ¨ÙŠ)
fn sqrt_approx(n: int) -> int {
    let x = n;
    let i = 0;
    while i < 10 {
        x = (x + n / x) / 2;
        i = i + 1;
    }
    return x;
}

// Ø¯Ø§Ù„Ø© Ø­Ø³Ø§Ø¨ Ø§Ù„Ù…Ø¶Ø±ÙˆØ¨
fn factorial(n: int) -> int {
    if n <= 1 {
        return 1;
    }
    return n * factorial(n - 1);
}

// Ø¯Ø§Ù„Ø© Ø­Ø³Ø§Ø¨ Ø§Ù„ØªÙˆÙ„ÙŠÙØ§Øª C(n, k)
fn combination(n: int, k: int) -> int {
    if k > n {
        return 0;
    }
    if k == 0 {
        return 1;
    }
    return (n * combination(n - 1, k - 1)) / k;
}

// Ø¯Ø§Ù„Ø© Ø­Ø³Ø§Ø¨ Ø§Ù„ØªØ±ØªÙŠØ¨Ø§Øª P(n, k)
fn permutation(n: int, k: int) -> int {
    if k > n {
        return 0;
    }
    if k == 0 {
        return 1;
    }
    return n * permutation(n - 1, k - 1);
}

// Ø¯Ø§Ù„Ø© Ø­Ø³Ø§Ø¨ Ù…Ø¬Ù…ÙˆØ¹ Ø§Ù„Ù…ØªØ³Ù„Ø³Ù„Ø© Ø§Ù„Ø­Ø³Ø§Ø¨ÙŠØ©
fn arithmetic_sum(first: int, last: int, count: int) -> int {
    return (count * (first + last)) / 2;
}

